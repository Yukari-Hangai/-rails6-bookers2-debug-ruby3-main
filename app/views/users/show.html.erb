<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user, isRoom: @isRoom, roomId: @roomId, room: @room, entry: @entry %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%= render 'books_count', user: @user, today: @today, yesterday: @yesterday, this_week: @this_week, last_week: @last_week %>
      <%= form_with url: user_count_search_path(@user), method: :get, local: false do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: 'btn btn-primary' %>
      <% end %>
      <div id = "search_result">
        <% if @search_book.present? %>
          <%= render 'count_search', search_book: @search_book %>
        <% end %>
      </div>
    </div>
  </div>
</div>