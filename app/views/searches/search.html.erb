<% if @range == "User" %>
  <!--検索対象モデルがUserの時 -->
 <h2>Users search for "<%= @word %>"</h2>
  <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
         <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
         <td><%= user.name %></td>
         <td>フォロー数: <%= user.followings.count %></td>
         <td>フォロワー数: <%= user.followers.count %></td>
         <td><%= link_to 'Show', user %></td>
        </tr>
      </tbody>
     <% end %>
    
  </table>
<% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
 <h2>Books search for "<% @word %>"</h2>
  <table class="table table-hover table-inverse">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
   </thead>
    <% @books.each do |book| %>
    <tbody>
        <tr>
          <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
    </tbody>
    <% end %>
<% end %>
</table>